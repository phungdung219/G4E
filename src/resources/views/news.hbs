<div class="main__news">
    <div class="container pt-4">
        <h1 class="news_title">Góc tâm hự giúp việc</h1>
        <ul class="list-group list-group-flush">
            {{#each posts}}
            <li class="list-group-item news_card">
                <div class="post_img">
                    <a href="{{this.link}}"><img src="{{this.img}}" alt="bài viết"></a>
                </div>
                <div class="post_info">
                    <a href="{{this.link}}">
                        <h3 class="post__title">{{this.title}}</h3>
                    </a>
                    <p class="post__desc">{{this.desc}}</p>
                </div>
            
            </li>
            {{/each}}
        </ul>
        <nav aria-label="Page navigation example mt-4 ">
            <ul class="pagination page_bottom">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>