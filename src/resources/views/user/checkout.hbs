  <body class="bg-light">
    <div class="container">

  <div class="row mt-4">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Hóa đơn</span>
        <span class="badge badge-secondary badge-pill">3</span>
      </h4>
      <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">Nhân viên muốn thuê</h6>
            <big class="text-muted font-weight-bolder">{{worker.name}}</big>
          </div>
          <span class="text-muted ">{{worker.salary}}VND</span>
        </li>
        <li class="list-group-item d-flex justify-content-between pt-4">
          <h6>Tổng cộng (VND)</h6>
          <strong>{{worker.salary}}VND</strong>
        </li>
      </ul>

    </div>
    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">Thông tin thuê nhân viên</h4>
      <form class="needs-validation" method="POST" action="/user/checkout/{{worker.slug}}" >
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="name">Họ và tên</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="" value="" required>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="note">Ghi chú <span class="text-muted">(Optional)</span></label>
          <input type="text" class="form-control" id="note" name="note" placeholder="Chú thích cho người giúp việc">
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>
        <div class="row">

          <div class="col-md-5">
            <label for="date">Ngày</label>
            <input class="form-control" type="date" name="date" id="date">
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>
          <div class="col-md-3 ">
            <label for="time">Giờ</label>
            <input class="form-control" type="time" id="time" name="time" min="09:00" max="18:00" required>
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>
        </div>
        
        <div class="row mt-4">
          <div class="mb-3">
            <label for="address">Địa chỉ thuê giúp việc</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="25, ngõ 69, đường Tân Triều" required>
            <div class="invalid-feedback">
              Please enter your shipping address.
            </div>
          </div>
        </div>

        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block mb-4" type="submit">Continue to checkout</button>
      </form>
    </div>
  </div>

  
